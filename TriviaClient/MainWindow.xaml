<Window x:Class="TriviaClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TriviaClient"
        mc:Ignorable="d"
        Title="Trivia"
        WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize"
        WindowStyle="None" WindowState="Maximized" Loaded="Window_Loaded">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
                <Setter Property="Width" Value="500"/>
                <Setter Property="Height" Value="125"/>
                <Setter Property="FontSize" Value="70"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Canvas Name="background_canvas">
            <Image Name="background_image" Source="Assets/menu-background.png"/>
        </Canvas>

        <Image Source="Assets/GEO_trivia_logo.png" Width="1000" Height="1000" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0, 120, 0, 0"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,375,0,0" Orientation="Vertical">
            <Button Content="Log In" Margin="0, 0, 0, 20"/>
            <Button Content="Sign Up" Margin="0, 0, 0, 20"/>
            <Button Content="Quit" Background="red"/>
        </StackPanel>
    </Grid>
</Window>
